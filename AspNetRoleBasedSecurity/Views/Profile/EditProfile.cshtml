@model AspNetRoleBasedSecurity.Models.Profilee
   
        <div class="container bootstrap snippet">
            <div class="col-sm-2 sidenav">

                <ul class="nav nav-pills nav-stacked active">
                    @if (User.IsInRole("Admin"))
                    {
                        <li> <a class="active" href="@Url.Action("GetAllPost", "Post")"><i class="fa fa-fw fa-home"></i> Home</a></li>}
                    else
                    {
                        <li> <a class="active" href="@Url.Action("GetAllPostUser", "Post")"><i class="fa fa-fw fa-home"></i> Home</a></li>}
                   
                    <li> <a class="active" href="@Url.Action("Tags", "Post")"><i class="fa fa-fw fa-tag"></i> Tracks</a></li>
                        <li> <a class="active" href="@Url.Action("Users", "Post")"><i class="fa fa-fw fa-users"></i> Users</a></li>
                        <li> <a class="active" href="@Url.Action("UserProfile", "Post")"><i class="fa fa-file"></i> About</a></li>

</ul><br>


            </div>
            <div class="row">
                <div class="col-sm-8">
                    <h3>Edit your profile</h3>
                    <br />

                    <h4><b>@User.Identity.Name</b></h4>
                    <br />
                    <h6><b style="background-color: lightyellow;">Mandatory to update "Process" field</b></h6>
                </div>
               
                <br />
                <div class="col-sm-1">
                    <a href="#" class="pull-right"  style = "width:150px"><img title="profile image" class="img-circle img-responsive" src="~/Content/images/Empty.png"></a>
                    
                </div>
                
            </div>
            <div class="row">
                <div class="col-sm-2">
                   

                </div>
                <!--/col-3-->
                <div class="col-sm-10">
                    <hr />
                    <ul>
                        <li> <a class="active" href="@Url.Action("MasterDetail", "Profile")"><i class="fa fa-fw" style="margin-left:650px"></i>Back to Profile</a></li>
                    </ul>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="col-sm-9">


                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })



                            <div class="form-group">
                                @Html.LabelFor(model => model.Dname, htmlAttributes: new { @class = "control-label col-sm-1" })
                                <div class="col-sm-9">

                                    @Html.EditorFor(model => model.Dname)
                                    @Html.ValidationMessageFor(model => model.Dname, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.About, htmlAttributes: new { @class = "control-label col-sm-1" })
                                <div class="col-sm-9">

                                    @Html.EditorFor(model => model.About)
                                    @Html.ValidationMessageFor(model => model.About, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-sm-1" })
                                <div class="col-sm-9">

                                    @Html.DropDownList("Gender", new List<SelectListItem>{new SelectListItem { Text = "Male", Value = "Male" },
                                                                           new SelectListItem { Text = "Female", Value = "Female" }, })
                                                                        
                                    @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <b>*</b> @Html.LabelFor(model => model.ProfilePictureTheme, htmlAttributes: new { @class = "control-label col-sm-1" })*
                                <div class="col-sm-9">

                                    @Html.DropDownList("ProfilePictureTheme", new List<SelectListItem>{new SelectListItem { Text = "Professional", Value = "Professional" },
                                                                           new SelectListItem { Text = "casual", Value = "casual" },new SelectListItem { Text = "Standard", Value = "Standard" } })

                                    @Html.ValidationMessageFor(model => model.ProfilePictureTheme, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Process, htmlAttributes: new { @class = "control-label col-sm-1" })
                                <div class="col-md-9">                                   
                                   
                                    @Html.ListBoxFor(model => model.Process, (IEnumerable<SelectListItem>)(new[]
                            {new SelectListItem() { Text = "Medicare", Value = "Medicare"},
                            new SelectListItem() {  Text = "Medical claims", Value = "Medical claims" },
                            new SelectListItem() {  Text = "Electronic Rejections", Value = "Electronic Rejections" },
                            new SelectListItem() {  Text = "Payor Change", Value = "Payor Change" },
                            new SelectListItem() {  Text = "Auth", Value = "Auth" },new SelectListItem() {  Text = "EQ", Value = "EQ" },
                            new SelectListItem() {  Text = "Ron Purr", Value = "Ron Purr" },
                            new SelectListItem() {  Text = "Automation", Value = "Automation" },  new SelectListItem() {  Text = "ART", Value = "ART" },
                            new SelectListItem() {  Text = "Sleep PAP", Value = "Sleep PAP" }

                       }), htmlAttributes: new { @class = "chosen" })


                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Role, htmlAttributes: new { @class = "control-label col-sm-1" })
                                <div class="col-sm-9">

                                    @Html.EditorFor(model => model.Position)
                                    @Html.ValidationMessageFor(model => model.Position, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Company, htmlAttributes: new { @class = "control-label col-sm-1" })
                                <div class="col-sm-9">

                                    @Html.EditorFor(model => model.Company)
                                    @Html.ValidationMessageFor(model => model.Company, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Location, htmlAttributes: new { @class = "control-label col-sm-1" })
                                <div class="col-sm-9">

                                     @Html.EditorFor(model => model.Location)
                                    @Html.ValidationMessageFor(model => model.Location, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-sm-1" })
                                <div class="col-sm-9">

                                    @Html.EditorFor(model => model.Email)
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <div class="col-md-offset-0 col-md-12">
                                    <input type="submit" value="Save Profile" class="btn btn-default" />
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10" style="color:green">
                                    <b> @ViewBag.Message </b>

                                </div>
                            </div>
                        </div>

                    }

                    <!--/tab-pane-->
                </div>
                <!--/tab-content-->

            </div>
            <!--/col-9-->
        </div>
        <!--/row-->
  

